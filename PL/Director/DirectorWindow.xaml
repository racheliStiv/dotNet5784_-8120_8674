<Window x:Class="PL.Director.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Director"
        mc:Ignorable="d"
        Title="DirectorWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Background="LightCoral">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>

        </Grid.ColumnDefinitions>
        <Button  Content="Engineers" Grid.Row="1" Grid.Column="1" FontSize="13"  Click="Choose_frame"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Button  Content="Tasks" Grid.Row="1" Grid.Column="3" FontSize="13"  Click="Choose_frame" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Button  Content="Gantt" Grid.Row="1" Grid.Column="5" FontSize="13"  Click="Choose_frame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button  Content="Status" Grid.Row="1" Grid.Column="7" FontSize="13"  Click="Choose_frame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>